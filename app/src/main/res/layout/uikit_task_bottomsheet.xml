<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:paddingBottom="10dp"
    android:layout_marginBottom="@dimen/dimen_20dp">


    <ImageView
        android:id="@+id/btn_handler"
        android:layout_marginTop="7dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_bottom_sheet_handler"/>

    <TextView
        android:id="@+id/tv_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="20sp"
        android:textColor="@color/uikit_black"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        android:layout_marginTop="@dimen/dimen_20dp"
        android:text="@string/choose_action"
        app:layout_constraintTop_toBottomOf="@id/btn_handler"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/img_delete"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_delete_forever_24"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_link"
        />


    <TextView
        android:id="@+id/label_delete"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="@id/img_delete"
        app:layout_constraintStart_toEndOf="@id/img_delete"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/action_hapus"/>


    <ImageView
        android:id="@+id/img_edit"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_baseline_edit_24"
        android:layout_marginStart="@dimen/dimen_20dp"
        android:layout_marginTop="@dimen/dimen_16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/label_delete"
        />

    <TextView
        android:id="@+id/label_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textColor="#000000"
        android:fontFamily="@font/poppins_regular"
        android:layout_marginHorizontal="@dimen/dimen_16dp"
        app:layout_constraintTop_toTopOf="@id/img_edit"
        app:layout_constraintStart_toEndOf="@id/img_edit"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/action_ubah_data"/>






</androidx.constraintlayout.widget.ConstraintLayout>